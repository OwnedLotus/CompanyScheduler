<Window x:Class="CompanyScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Label Margin="40" FontSize="30">
            <TextBlock x:Name="welcomeText">
            </TextBlock>
        </Label>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="100,30,100,0" HorizontalAlignment="Center">
                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label>
                        <TextBlock x:Name="currLocationText" FontSize="20">
                            Current Location: 
                        </TextBlock>
                    </Label>
                    <Label>
                        <TextBlock x:Name="LocalText" FontSize="20">
                            CurrentLocation
                        </TextBlock>
                    </Label>
                </StackPanel>
                <StackPanel Margin="20,0,20,0" Width="200">
                    <TextBlock x:Name="userText" FontSize="20">
                        UserName:
                    </TextBlock>
                    <TextBox x:Name="userTextBox" Margin="0,15,0,15">
                    </TextBox>
                    <TextBlock x:Name="passText" FontSize="20">
                        Password:
                    </TextBlock>
                    <TextBox x:Name="passTextBox" Margin="0,15,0,15">
                    </TextBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Login" Margin="20,0,20,0" Click="LoginButton_Clicked" />
                        <Button Content="Quit" Margin="20,0,20,0" Click="QuitButton_Clicked" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <ListBox x:Name="LanguagesSelector" SelectionChanged="LanguagesSelector_SelectionChanged" MaxHeight="50" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBoxItem>English</ListBoxItem>
                <ListBoxItem>日本語</ListBoxItem>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
